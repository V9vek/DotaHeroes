        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#F8F8F8</item>
        <item name="colorOnPrimary">#353535</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#2ED470</item>
